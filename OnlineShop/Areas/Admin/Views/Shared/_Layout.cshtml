<!doctype html>
<html lang="en" class="minimal-theme">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/assets/admin/images/favicon-32x32.png" type="image/png" />
    <!--plugins-->

    <link href="~/assets/admin/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <link href="~/assets/admin/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/assets/admin/plugins/metismenu/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/assets/admin/plugins/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
    <link href="~/assets/admin/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->

    <link href="~/assets/admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/admin/css/bootstrap-extended.css" rel="stylesheet" />
    <link href="~/assets/admin/css/style.css" rel="stylesheet" />
    <link href="~/assets/admin/css/icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <!-- loader-->
    <link href="~/assets/admin/css/pace.min.css" rel="stylesheet" />

    <!--Theme Styles-->
    <link href="~/assets/admin/css/dark-theme.css" rel="stylesheet" />
    <link href="~/assets/admin/css/light-theme.css" rel="stylesheet" />
    <link href="~/assets/admin/css/semi-dark.css" rel="stylesheet" />
    <link href="~/assets/admin/css/header-colors.css" rel="stylesheet" />

    <!--Toast Styles-->
    <link href="~/assets/admin/css/toast.css" rel="stylesheet" />

    <title>Admin</title>
</head>

<body>


    <!--start wrapper-->
    <div class="wrapper">

        @RenderPage("_Header.cshtml")


        @RenderPage("_Sidebar.cshtml")
        <!--start content-->
        <main class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">@RenderSection("breadcrumb", required: false)</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">@RenderSection("breadcrumb_active", required: false)</li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary">Cài đặt</button>
                        <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
                            <a class="dropdown-item" href="javascript:;">Action</a>
                            <a class="dropdown-item" href="javascript:;">Another action</a>
                            <a class="dropdown-item" href="javascript:;">Something else here</a>
                            <div class="dropdown-divider"></div>	<a class="dropdown-item" href="javascript:;">Separated link</a>
                        </div>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->
            <h6 class="mb-0 text-uppercase">@RenderSection("data", required: false)</h6>
            <hr />

            @* Setup toast *@
            @if (TempData["AlertMessage"] != null)
            {
                <div id="alert-box" class="alert @TempData["AlertType"] hide">
                    @TempData["AlertMessage"]
                </div>
            }

            @RenderBody()
        </main>
        <!--end page main-->
        <!--start overlay-->
        <div class="overlay nav-toggle-icon"></div>
        <!--end overlay-->
        <!--Start Back To Top Button-->
        <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
        <!--End Back To Top Button-->

    </div>
    <!--end wrapper-->
    <!-- Bootstrap bundle JS -->
    <script src="~/assets/admin/js/bootstrap.bundle.min.js"></script>
    <!--plugins-->
    <script src="~/assets/admin/js/jquery.min.js"></script>
    <script src="/scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/admin/plugins/simplebar/js/simplebar.min.js"></script>
    <script src="~/assets/admin/plugins/metismenu/js/metisMenu.min.js"></script>
    <script src="~/assets/admin/plugins/easyPieChart/jquery.easypiechart.js"></script>
    <script src="~/assets/admin/plugins/peity/jquery.peity.min.js"></script>
    <script src="~/assets/admin/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
    <script src="~/assets/admin/js/pace.min.js"></script>
    <script src="~/assets/admin/plugins/vectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="~/assets/admin/plugins/vectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/assets/admin/plugins/apexcharts-bundle/js/apexcharts.min.js"></script>
    <script src="~/assets/admin/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/admin/plugins/datatable/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/assets/admin/js/plugins/ckfinder/ckfinder.js"></script>
    <script src="~/assets/admin/js/plugins/ckeditor/ckeditor.js"></script>
    <!--app-->
    <script src="~/assets/admin/js/app.js"></script>
    <script src="~/assets/admin/js/index.js"></script>


    @RenderSection("jsFooter", required: false)

</body>

</html>